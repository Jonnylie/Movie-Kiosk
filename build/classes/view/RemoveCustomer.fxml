<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.image.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.RemoveCustomerController"
      alignment="center" spacing="10"
      styleClass="root"
      prefWidth="800.0"
>
<HBox alignment="center_left" spacing="10">
            <ImageView>
                <image>
                    <Image url="@movie_icon.png"/>
                </image>
            </ImageView>
            <Label styleClass="h1" text="Remove Customer"/>
        </HBox> 
        
        <TableView fx:id="customersTv" items="${controller.kiosk.customers}" prefWidth="300" prefHeight="440">
            <placeholder><Label text="No results found."/></placeholder>
            <columns>
                <TableColumn text="ID">
                    <cellValueFactory>
                        <PropertyValueFactory property="id"/>
                    </cellValueFactory>
            </TableColumn>
                <TableColumn text="Name">
                <cellValueFactory>
                        <PropertyValueFactory property="name"/>
                    </cellValueFactory>
            </TableColumn>
                <TableColumn prefWidth="100" text="Balance">
                <cellValueFactory>
                        <PropertyValueFactory property="balance"/>
                    </cellValueFactory>
   
            </TableColumn>
            </columns>
        </TableView>
        
        <GridPane alignment="center">
    <VBox alignment="center" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="3">
            <Button fx:id="button" styleClass= "button" text="Remove Customer" onAction="#handleRemoveCustomer" />
            <Button styleClass= "button" text="Exit" onAction="#handleExit" />
         </VBox>
    </GridPane>
                

        
    <stylesheets>
        <URL value="@kiosk.css"/>
    </stylesheets>
</VBox>
